#include <stdio.h>
//Soma
double soma(double a,double b)
{
    double res=0;
    res= a+b;
    return (res);
}

//Subtração
double subt(double a, double b)
{
    double res=0;
    res= a-b;
    return (res);
}
//Multiplicação
double mult (double a, double b)
{
    double res=0;
    res= a*b;
    return (res);
}
//Divisão
double divd(double a, double b)
{
    double res=0;
    res= a/b;
    return (res);
}
//Potenciação
double pote(double a, double b)
{
      double res,con;
    res = b;
    con = 0;
   while (con<a);
   {
      res= b*res;
       con++;
   }
   return (res);
}
//Raiz Quadrada
double raiz(double a)
{
    double b, res, con;
    scanf("%lf",&a);
    b = a;
    con = 0;
    while (con<20)
    {
        b = (0.5)*(b+(a/b));
        con ++;
    }
    res = b;

return (res);
}
//Fatorial
double fato(double a)
{
    
double cont;
scanf("%lf",&a);
cont = a-1;
while (cont>1){
 a= a*cont;
 cont --;
}
return (a);
}
